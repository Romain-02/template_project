<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<form method="post">
    <section class="bg-gray-50">
        <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-screen lg:py-0">
            <a href="/" class="mb-4">
                <h2 class="font-bold text-3xl">
                    <p class="flex items-center bg-[#222] text-white p-2 px-4 rounded-md">
                        Template Project
                        <img class="ms-3 w-8 rounded-full" src="{{ asset('images/templateIcon.png') }}" alt="Logo">
                    </p>
                </h2>
            </a>

            <div class="w-full bg-white rounded-lg shadow-xl sm:max-w-md xl:p-0">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    {% if error %}
                        <div class="flex items-center p-4 mb-4 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50" role="alert">
                            <svg class="w-4 h-4 me-3" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
                            </svg>
                            <span class="text-red-800">{{ error.messageKey|trans(error.messageData, 'login') }}</span>
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3 text-sm text-green-800">
                            You are connected as {{ app.user.userIdentifier }},
                            <a href="{{ path('app_logout') }}" class="text-stone-750 underline">Disconnect</a>.
                        </div>
                    {% endif %}

                    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-950 md:text-2xl">
                        Sign in to access to your application
                    </h1>

                    <div class="space-y-4 md:space-y-6">
                        <div>
                            <label for="email" class="block mb-2 text-sm font-medium text-gray-950">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="email" autocomplete="email" required autofocus class="bg-gray-50 border border-gray-300 text-gray-950 sm:text-sm rounded-lg focus:ring-stone-750 focus:border-stone-750 block w-full p-2.5">
                        </div>

                        <div>
                            <label for="inputPassword" class="block mb-2 text-sm font-medium text-gray-950">Password</label>
                            <input type="password" name="password" id="inputPassword" autocomplete="current-password" required class="bg-gray-50 border border-gray-300 text-gray-950 sm:text-sm rounded-lg focus:ring-stone-750 focus:border-stone-750 block w-full p-2.5">
                        </div>

                        <div class="flex items-start">
                            <div class="flex items-center h-5">
                                <input id="remember" name="_remember_me" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-stone-300">
                            </div>
                            <div class="ml-3 text-sm">
                                <label for="remember" class="text-gray-500">Remember me</label>
                            </div>
                        </div>

                        <button type="submit" class="w-full text-white bg-[#222] cursor-pointer hover:bg-[#050505] focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                            Sign in
                        </button>
                    </div>
                </div>
            </div>
            <p class="mt-5 ms-2">No account ? <a href="{{ path('app_register') }}" class="hover:text-blue-900 font-bold text-blue-600 ms-2">Sign up here</a></p>
        </div>
    </section>
</form>
</body>
</html>
